<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inLinear"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp">

        <TextView

            style="@style/StyleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make:"/>

        <EditText
            android:id="@+id/etCarMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car name"/>

        <TextView

            style="@style/StyleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year:"/>

        <EditText
            android:id="@+id/etYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2012"/>

        <TextView
            style="@style/StyleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Color:"/>

        <EditText
            android:id="@+id/etColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Black"/>

        <TextView
            style="@style/StyleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase Price(Â£):"/>

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Price "/>

        <TextView
            style="@style/StyleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engine Size (litre):"/>

        <EditText
            android:id="@+id/etEngine"
            style="@style/StyleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Engine Size"/>

    </LinearLayout>


    <Button
        android:id="@+id/btnCreateCar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inLinear"
        android:text="CREATE CAR"
        style="@style/buttonStyle"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inLinear"
        android:layout_alignParentEnd="true"
        android:text="CREATE DIESEL"
        android:layout_centerInParent="true"
        style="@style/buttonStyle"
        android:layout_marginRight="40dp"
        />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tvOutput"
            style="@style/StylebottomTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="500dp"
            />
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>